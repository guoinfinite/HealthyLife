<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.healthylife.activity.SportMessageActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_size_0"
        android:layout_margin="@dimen/width_size_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/data_all"
                android:layout_width="@dimen/width_size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_green3_selector"
                android:gravity="center"
                android:minHeight="@null"
                android:text="@string/all"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20" />

            <Button
                android:id="@+id/data_day"
                android:layout_width="@dimen/width_size_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_blue2_selector"
                android:gravity="center"
                android:minHeight="@null"
                android:text="@string/find_day"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_size_0"
            android:layout_marginTop="@dimen/width_size_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您在KeepFit累计运动："
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_20" />

            <TextView
                android:id="@+id/sport_scores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_size_20"
                android:layout_marginBottom="@dimen/width_size_20"
                android:gravity="center"
                android:text="0分"
                android:textColor="@color/black"
                android:textSize="45sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/width_size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/left_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="完成计划"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_20" />

                    <TextView
                        android:id="@+id/left_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/left_hint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/width_size_10"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/left_txt"
                        android:layout_centerHorizontal="true"
                        android:text="次"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/width_size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/center_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="累计运动"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_20" />

                    <TextView
                        android:id="@+id/center_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/center_hint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/width_size_10"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/center_txt"
                        android:layout_centerHorizontal="true"
                        android:text="天"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/width_size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/right_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="累计消耗"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_20" />

                    <TextView
                        android:id="@+id/right_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/right_hint"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/width_size_10"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/right_txt"
                        android:layout_centerHorizontal="true"
                        android:text="大卡"
                        android:textColor="@color/black"
                        android:textSize="26sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_20"
                android:text="累计的运动天数(当前/最大)"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />

            <ProgressBar
                android:id="@+id/data_progress"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_size_10"
                android:max="7"
                android:progress="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_20"
                android:gravity="right"
                android:text="1天/7天"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/day_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_size_0"
            android:layout_marginTop="@dimen/width_size_10"
            android:layout_weight="1"
            android:padding="@dimen/width_size_10">

            <TextView
                android:id="@+id/null_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="没有数据"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <ListView
                android:id="@+id/data_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@color/theme_blue_two"
                android:dividerHeight="@dimen/width_size_2"
                android:listSelector="#00000000" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
